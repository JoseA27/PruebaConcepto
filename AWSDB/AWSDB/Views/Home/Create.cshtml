
@model Articulo

<h2>Create New Article</h2>

<form asp-controller="Article" asp-action="Create" method="post">

    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Precio"></label>
        <input asp-for="Precio" class="form-control" />
    </div>

    <button asp-action="actualizar" type="submit" class="btn btn-primary">Insertar</button>
    <button asp-action="Volver" type="submit" class="btn btn-primary">Cerrar</button>

</form>
